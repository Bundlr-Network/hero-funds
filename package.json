{
  "name": "arfunds",
  "version": "1.0.1",
  "description": "This library allows you to interact with Arweave funding pools for archival projects.",
  "keywords": [
    "arweave",
    "archive"
  ],
  "scripts": {
    "compile:node": "tsc --declaration -project tsconfig.json",
    "compile:web": "npx browserify -p esmify ./src/library/tobundle.js -o ./umd/arfunds_bundle.js", 
    "build": "npm run compile:node && npm run compile:web"
  },
  "url": "https://github.com/abhavk/arfunds",
  "author": "Abhav Kedia <abhavkedia@gmail.com> (https://github.com/abhavk)",
  "dependencies": {
    "arlocal": "1.1.30",
    "arweave": "^1.10.23",
    "browserify": "^17.0.0",
    "gql-query-builder": "^3.6.0",
    "node-cache": "^5.1.2",
    "redstone-smartweave": "^0.4.74"
  },
  "main": "src/library/Arfunds.js",
  "devDependencies": {
    "esmify": "^2.1.1",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  },
  "files": [
	"umd/*"
     ],
